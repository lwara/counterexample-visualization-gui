module main {
  // Part 1: System description.
  var a, b, c, d, e, f : integer;

  init {
    a = 0;
    b = 1;
    c = 2;
    d = 3;
    e = 4;
    f = 5;
  }

  next {
    a' = a + 1;
    b' = b - 1;
    c' = c + 2;
    d' = d - 2;
    e' = e + 3;
    f' = f - 3;
  }

  // Part 2: System specification.
  invariant inv1: a <= b;
  invariant inv2: b <= c;
  invariant inv3: c <= d;
  invariant inv4: d <= e;
  invariant inv5: e <= f;
  invariant inv6: a + b + c <= d + e + f;

  // Part 3: Proof script.
  control {
    vobj = bmc(10); // Run BMC for 10 steps
    check;
    print_results;
    vobj.print_cex(a, b, c, d, e, f);
  }
}
